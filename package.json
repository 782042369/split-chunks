  "license": "ISC",
  "devDependencies": {
    "@antfu/eslint-config": "^4.17.0",
    "@types/node": "^20.19.8",
    "conventional-changelog-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "es-module-lexer": "^1.7.0",
    "eslint-plugin-format": "^1.0.1",
    "rolldown-vite": "^7",
